{
  "name": "liftr",
  "version": "1.0.0",
  "description": "A scaffolding CLI for Node.js/Typescript API's",
  "author": "Faris Tangastani",
  "license": "ISC",
  "main": "./lib/index.js",
  "bin": {
    "liftr": "./lib/index.js"
  },
  "keywords": [
    "cli",
    "typescript",
    "nodejs"
  ],
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "create": "npm run build && npm run copy-templates && npm run test",
    "build": "tsc -p .",
    "clean": "rm -rf ./lib",
    "copy-templates": "cp -a templates/. lib/templates/",
    "test": "sudo npm i -g && liftr",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "dependencies": {
    "@types/fs-extra": "^5.0.4",
    "chalk": "^2.4.1",
    "clear": "^0.1.0",
    "commander": "^2.19.0",
    "figlet": "^1.2.1",
    "fs-extra": "^7.0.1",
    "minimist": "^1.2.0",
    "npm": "^6.7.0",
    "ora": "^3.1.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@types/minimist": "^1.2.0",
    "@types/node": "^10.12.10",
    "nodemon": "^1.18.7",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.3.1"
  }
}
